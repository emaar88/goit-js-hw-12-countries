{{#each this}}
<div class="one_country">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="country_name">{{name}}</h2>
            </div>
            <div class="col-12 col-lg-6 block_info">
                <p><span class="bold_text">Столица:</span> {{capital}}</p>
                <p><span class="bold_text">Население:</span> {{population}}</p>
                <ul class="official_languages">
                    {{#each languages}}
                    <li>{{name}}</li>
                    {{/each}}
                </ul>
            </div>
            <div class="col-12 col-lg-6 block_flag">
                <img src="{{flag}}" alt="{{name}}" class="flag_country">
            </div>
        </div>
    </div>
</div>
{{/each}}